@page "/"
@using Radzen.Blazor

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<p>With OK button</p>
<RadzenDatePicker TValue="DateTime?"
                  @bind-Value="@Value"
                  ShowTime="true"
                  TimeOnly="true"
                  DateFormat="HH:mm"
                  Change="@OnChangeInner"
                  ReadOnly="false"
                  Style="width:100%" 
                  AllowClear="true"
                  ShowTimeOkButton="true" />



<p>Without OK button</p>
<RadzenDatePicker TValue="DateTime?"
                  @bind-Value="@Value2"
                  ShowTime="true"
                  TimeOnly="true"
                  DateFormat="HH:mm"
                  Change="@OnChangeInner2"
                  ReadOnly="false"
                  Style="width:100%" 
                  AllowClear="true"
                  ShowTimeOkButton="false" />


<p>With OK button and one way binding</p>
<RadzenDatePicker TValue="DateTime?"
                  Value="@Value3"
                  ShowTime="true"
                  TimeOnly="true"
                  DateFormat="HH:mm"
                  Change="@OnChangeInner3"
                  ReadOnly="false"
                  Style="width:100%" 
                  AllowClear="true"
                  ShowTimeOkButton="true" />

